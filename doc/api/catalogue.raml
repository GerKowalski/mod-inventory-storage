#%RAML 0.8
title: Catalogue
version: v0.1
protocols: [ HTTP, HTTPS ]
baseUri: http://localhost:9402

documentation:
  - title: Catalogue API
    content: <b>Defines the baseline resources provided by a catalogue module implementation</b>

schemas:
 - item: !include schema/catalogue/item.json
 - items: !include schema/catalogue/items.json

traits:
 - secured: !include shared/traits/auth.raml
 - language: !include shared/traits/language.raml

resourceTypes:
 - collection: !include shared/rtypes/collection.raml

/catalogue:
    /item:
      displayName: Items
      type:
        collection:
          exampleCollection: !include examples/catalogue/items_get.json
          schemaCollection: items
          schemaItem: item
          exampleItem: !include  examples/catalogue/item_get.json
      get:
        queryParameters:
          partialName:
            displayName: Partial Title
            type: string
            description: text to search for within the title of items
            example: partialTitle="Small Angry Planet"
            required: false
      post:
        body:
          application/json:
            schema: !include schema/catalogue/item_create.json
            example: !include  examples/catalogue/item_post.json
        responses:
          201:
