{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "alternativeTitles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "edition": {
      "type": "string"
    },
    "series": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "creators": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "creatorTypeId": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "creatorTypeId"
        ]
      }
    },
    "contributors": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "contributorTypeId": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "contributorTypeId"
        ]
      }
    },
    "publication": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "publisher": {
            "type": "string"
          },
          "place": {
            "type": "string"
          },
          "dateOfPublication": {
            "type": "string"
          }
        },
        "uniqueItems": true
      }
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "instanceTypeId": {
      "type": "string"
    },
    "instanceFormatId": {
      "type": "string"
    },
    "identifiers": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string"
          },
          "typeId": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "value",
          "typeId"
        ]
      }
    },
    "subjects": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "source": {
      "type": "string"
    },
    "languageCodes": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "string"
      }
    },
    "version" : {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "title"
  ]
}
